<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>HCK-CI report</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
</head>

<body>
    <div class="container">
        <div class="row pb-3 text-center">
            <h1><%= tag %></h1>
        </div>
        <div class="row pb-3">
            <% if sections.include? 'chart' %>
            <div class="col col-4">
                <canvas id="result_chart"></canvas>
            </div>
            <% end %>
            <% if sections.include? 'guest_info' %>
            <div class="col col-8">
                <p class="text-center">Guest system information</p>
                <% system_info['guest'].each do |_, guest_info| %>
                    <% guest_info.each do |k, v| %>
                        <p><%= k %>: <%= v %></p>
                    <% end %>
                <% end %>
            </div>
            <% end %>
        </div>
        <div class="row pb-3">
            <p>Report generation time: <%= Time.now %></p>
        </div>
        <% if sections.include? 'url' %>
        <div class="row pb-3">
            <p>Detailed report with all logs: <a href="<%= url %>"><%= url %></a></p>
        </div>
        <% end %>
        <div class="row pb-3">
            <table class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Test</th>
                        <th scope="col">Duration</th>
                        <th scope="col">Result</th>
                    </tr>
                </thead>
                <tbody>
                    <% tests.each_with_index do |test, idx| %>
                        <% if test['status'] == 'Passed' %>
                        <tr class="table-success">
                        <% elsif test['status'] == 'Failed' %>
                        <tr class="table-danger">
                        <% else %>
                        <tr class="table-secondary">
                        <% end %>
                            <th scope="row"><%= idx + 1 %></th>
                            <td>
                                <% unless test['url'].nil? %><a href="<%= test['url'] %>"><% end %>
                                <%= test['name'] %>
                                <% unless test['url'].nil? %></a><% end %>
                            </td>
                            <td><%= test['estimatedruntime'] %></td>
                            <td><%= test['status'] %></td>
                        </tr>
                    <% end %>
                    <% if sections.include? 'rejected_test' %>
                    <% rejected_test.each_with_index do |test, idx| %>
                        <tr class="table-warning">
                            <th scope="row"><%= tests.length + idx + 1 %></th>
                            <td>
                                <% unless test['url'].nil? %><a href="<%= test['url'] %>"><% end %>
                                <%= test['name'] %>
                                <% unless test['url'].nil? %></a><% end %>
                            </td>
                            <td><%= test['estimatedruntime'] %></td>
                            <td>Skipped</td>
                        </tr>
                    <% end %>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4"
        crossorigin="anonymous"></script>
    <% if sections.include? 'chart' %>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        const ctx = document.getElementById('result_chart');

        new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: [
                    <% if sections.include? 'rejected_test' %>
                        'Skipped',
                    <% end %>
                    'Failed',
                    'Passed',
                    'NotRun'
                ],
                datasets: [{
                    data: [
                        <% if sections.include? 'rejected_test' %>
                            <%= test_stats['skipped'] %>,
                        <% end %>
                        <%= test_stats['failed'] %>,
                        <%= test_stats['passed'] %>,
                        <%= test_stats['inqueue'] %>
                    ],
                    backgroundColor: [
                        <% if sections.include? 'rejected_test' %>
                            '#FFC107',
                        <% end %>
                        '#DC3545',
                        '#28A745',
                        '#6C757D',
                    ],
                    borderWidth: 1
                }]
            },
        });
    </script>
    <% end %>
</body>

</html>
